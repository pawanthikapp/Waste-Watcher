<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2f6f4e"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/searchCommunity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EACBCB"
        android:backgroundTint="#D5C0C0"
        android:hint="Search communities"
        android:padding="10dp"
        android:textColor="#100000" />

    <Button
        android:id="@+id/addCommunityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:backgroundTint="#CE86DA"
        android:text="Add New Community"
        android:textColor="#000000" />

    <ListView
        android:id="@+id/communityListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDE9C8" />
</LinearLayout>